                            <div class="overlay"></div>
                        </div>
                        <div class="text py-3 pb-4 px-3 text-center">
                            <h3>@Html.DisplayFor(model => model.FoodName)</h3>
                            <div class="d-flex">
                                <div class="pricing">
                                    <p class="price"><span>@Html.DisplayNameFor(model => model.FoodType): @Html.DisplayFor(model => model.FoodType)</span></p>
                                    <p class="price"><span>@Html.DisplayNameFor(model => model.Price): @Html.DisplayFor(model => model.Price)</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form asp-action="Delete">
