@model IEnumerable<MamaFood.Models.Food>

@{
    ViewData["Title"] = "Menu";
}

<div class="hero-wrap hero-bread" style="background-image: url('../../img/6.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a asp-action="Index" asp-controller="Home">Home</a></span> <span>Menu</span></p>
                <h1 class="mb-0 bread">Menu</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-3 ftco-animate">
                    <div class="product">
                        <a asp-action="Details" asp-route-id="@item.ID" class="img-prod">
                            <img width=300px height=300px class="img-fluid" src=@Html.DisplayFor(modelItem => item.FoodImage)>
                            <div class="overlay"></div>
                        </a>
                        <div class="text py-3 pb-4 px-3 text-center">
                            <h3><a href="#">@Html.DisplayFor(modelItem => item.FoodName)</a></h3>
                            <div class="d-flex">
                                <div class="pricing">
                                    <p class="price"><span>@Html.DisplayFor(modelItem => item.Price)</span></p>
                                </div>
                            </div>
                            <div class="bottom-area d-flex px-3">
                                <div class="m-auto d-flex">
                                    <a asp-action="Details" asp-route-id="@item.ID" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                                        <span><i class="ion-ios-menu"></i></span>
                                    </a>
                                    <a asp-controller="Order" asp-action="Cart" asp-route-foodId="@item.ID" asp-route-price="@item.Price" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                        <span><i class="ion-ios-cart"></i></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="ftco-section ftco-no-pt ftco-no-pb py-5 bg-light">
    <div class="container py-4">
        <div class="row d-flex justify-content-center py-5">
            <div class="col-md-6">
                <h2 style="font-size: 22px;" class="mb-0">Subcribe to our Newsletter</h2>
                <span>Get e-mail updates about our latest shops and special offers</span>
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <div class="subscribe-form">
                    <div class="form-group d-flex">
                        <input name="sub_email" class="form-control" placeholder="Enter your email address" TextMode="Email" />
                        <input type="submit" value="Subscribe" class="submit px-3" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>