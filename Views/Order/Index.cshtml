@model List<Order>
@{
    ViewData["Title"] = "Customer Orders";
}

<section class="ftco-section ftco-cart">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <div class="cart-list">
                    @if (ViewBag.msg != null)
                    {
                        <h2>@ViewBag.msg</h2>
                    }
                    else
                    {
                        <table class="table">
                            <thead class="thead-primary">
                                <tr class="text-center">
                                    <th>&nbsp;</th>
                                    <th>Order Number</th>
                                    <th>Customer Name</th>
                                    <th>Order Status</th>
                                    <th>Order Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var displayresult in Model)
                                {
                                    <tr class="text-center">
                                        <td class="product-remove">
                                            @*<a asp-route-PartitionKey="@displayresult.PartitionKey" asp-route-RowKey="@displayresult.RowKey" asp-controller="Order" asp-action="Delete">
                                                <button>Delete</button>
                                            </a>*@
                                            <a><span class="ion-ios-close"></span></a>
                                        </td>
                                        <td class="image-prod">@displayresult.PartitionKey</td>
                                        <td class="product-name" style="width:300px;">@displayresult.RowKey</td>
                                        <td class="price">@displayresult.OrderStatus</td>
                                        <td class="quantity" style="width:180px;">@displayresult.Timestamp</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</section>