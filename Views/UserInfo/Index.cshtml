@model List<MamaFood.Areas.Identity.Data.MamaFoodUser>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-wrap hero-bread" style="background-image: url('../../img/4.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a asp-action="Index" asp-controller="Home">Home</a></span> <span>All Users</span></p>
                <h1 class="mb-0 bread">All Users</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-cart" style="margin-top:-60px;">
    <div style="margin-bottom: 20px; margin-left: 20px;">
        <form class="form-inline">
            <input type="text" name="Search" class="form-control" placeholder="Search Email..." style="text-align: left; padding-left: 10px; width: 300px;" />&nbsp;&nbsp;&nbsp;
            <input type="submit" value="Search" class="btn btn-primary py-3 px-4" />
        </form>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <div class="cart-list">
                    <table class="table">
                        <thead class="thead-primary">
                            <tr class="text-center">
                                <th>ID</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr class="text-center">
                                    <td class="product-name">@user.Id</td>
                                    <td class="product-name">@user.Email</td>
                                    <td class="product-name">@user.PhoneNumber</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

